@model IEnumerable<Mar.Data.Models.Product>
@{
    ViewData["Title"] = "Главная страница";
}

<a asp-action="Create">Добавить изображение</a>

<h2>Все изображения</h2>
<div class="row mt-3 mb-2">
    @{
        foreach (var product in Model)
        {
        <div class="col-lg-3 mb-1">
            <a asp-action="Main" asp-route-id="@product.Id">
                <img width="310" height="210" src="@product.PathImg" alt="@product.Name" />
            </a>
        </div>
        }
    }
</div>